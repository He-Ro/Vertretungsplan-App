<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="2dp"
    android:id="@+id/layoutHeRo"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clickable="false"
    android:orientation="vertical" xmlns:android1="http://schemas.android.com/apk/res/android">

	<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
        <TextView android:id="@+id/textStunde"
	    android:textSize="16sp"
	    android:textStyle="bold"
	    android:layout_width="0dip"
	    android:layout_height="wrap_content"
	    android:layout_weight="1"/>
         <TextView android:id="@+id/textKlassen"
	    android:textStyle="bold"
	    android:layout_width="0dip"
	    android:layout_height="wrap_content"
	    android:layout_weight="1"/>
	    <TextView android:id="@+id/textFach1"
	    android:layout_width="0dip"
	    android:layout_height="wrap_content"
	    android:layout_weight="1"/>
	    <TextView android:id="@+id/textRaum"
	    android:layout_width="0dip"
	    android:layout_height="wrap_content"
	    android:layout_weight="1"/>
	</LinearLayout>
	<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
	    
	    <TextView android:id="@+id/textVertreter"
	    android:layout_width="0dip"
	    android:layout_height="wrap_content"
	    android:layout_weight="1"/>
        <TextView android:id="@+id/textFach2"
	    android:layout_width="0dip"
	    android:layout_height="wrap_content"
	    android:layout_weight="1"/>
	    <TextView android:id="@+id/textText"
	    android:layout_width="0dip"
	    android:layout_weight="2"
	   android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>